<div class="header row">
  <div class="col-md-9">
    <h2>Classroom Management</h2>
  </div>
  <div class="col-md-3">
    <button {{action 'newClassroom'}} type="button" class="btn btn-primary header__button">New Classroom</button>

  </div>
</div>

{{#if hasClassrooms}}

  <table class="table table-sm">
    <thead>
      <th>Title</th>
      <th colspan="2">Student Count</th>
    </thead>
    <tbody>
      {{#each classrooms as |classroom|}}
        <tr>
          <td>{{classroom.title}}</td>
          <td>{{classroom.students.length}}</td>
          <td><button {{ action 'editClassroom' classroom }} class="btn btn-success">Edit</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
<div class="alert alert-warning" role="alert">
  <strong>No classrooms available</strong> Click 'New Classroom' above to create your first classroom.
</div>
{{/if}}

{{#if creatingNewClassroom }}
  {{ new-classroom-modal
  closeAction=(action "closeNewClassroomModal") }}
{{/if}}
